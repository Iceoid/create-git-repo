#!/bin/sh

repo=$1
github_token=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
gitlab_token=api_token_here

test -z $repo && echo "Repository name required." 1>&2 && exit 1

# Github
curl -H "Authorization: token ${github_token}" --data "{\"name\": \"${repo}\", \"private\": \"true\"}" https://api.github.com/user/repos

